@model IEnumerable<ProcessingApp.Models.PropertyModel>

@{
    ViewData["Title"] = "Index";
}
<h2>List of Properties</h2>

<p class="create-new-button">
    <a class="btn btn-primary" asp-action="Create">Add New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4" style="margin-top:1rem">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.PropertyName)</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.PropertyAdress): </b>@Html.DisplayFor(modelItem => item.PropertyAdress)</li>

                    <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.PropertyPrice): </b>$@Html.DisplayFor(modelItem => item.PropertyPrice)</li>
                    <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="dropdown">
                        <a class="dropdown-toggle" href="#" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.PropertyId">Edit</a>
                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.PropertyId">Details</a>
                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.PropertyId">Delete</a>
                        </div>
                    </div>
                    <button type="button" href="#" class="btn btn-success">Card link</button>
                </div>
            </div>
        </div>
    }
</div>
