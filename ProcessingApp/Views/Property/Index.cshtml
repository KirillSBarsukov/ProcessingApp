        <thead>
            <tr>
                <th>
                    
                </th>
                <th>
                    
                </th>
                <th>
                    
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PropertyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PropertyAdress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PropertyPrice)
                    </td>
                    <td>
               
